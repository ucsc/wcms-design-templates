<!--   
NOTE: this is not the complete data definition. Only the billboard group.
-->
<group identifier="billboards" label="Billboard Image" multiple="true">
    <text help-text="Headline and teaser text need to be filled out for this feature" identifier="headline" label="Headline"/>
    <text help-text="Limit to 250 characters or less" identifier="teaser" label="Teaser" multi-line="true"/>
    <asset identifier="image" label="Image (1080w x 346h)" required="true" type="file"/>
    <text identifier="alt-text" label="Alternate text for image"/>
    <asset identifier="page" label="Internal link" type="page"/>
    <asset identifier="symlink" label="External link" type="symlink"/>
    <text identifier="url" label="Manual URL"/>
    <text help-text="What the user will see" identifier="link-text" label="Link text"/>
    <text default="left" help-text="Choose a layout for your headline, teaser, and link" identifier="layout" label="Layout style" type="radiobutton">
      <radio-item value="left"/>
      <radio-item value="right"/>
      <radio-item value="top"/>
      <radio-item value="bottom"/>
    </text>
    <text default="blue" help-text="The text background will be this color" identifier="color" label="Background color of text block" type="radiobutton">
      <radio-item value="blue"/>
      <radio-item value="gold"/>
      <radio-item value="green"/>
      <radio-item value="light-blue"/>
      <radio-item value="lime"/>
      <radio-item value="pink"/>      
    </text>
  </group>

