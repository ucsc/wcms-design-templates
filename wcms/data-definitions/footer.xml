<system-data-structure>
  <group identifier="social-link" label="Social media link" maximum-number="5" multiple="true">
    <text identifier="site" label="Site" type="dropdown">
      <dropdown-item value="Facebook"/>
      <dropdown-item value="Twitter"/>
      <dropdown-item value="Instagram"/>
      <dropdown-item value="YouTube"/>
      <dropdown-item value="LinkedIn"/>
    </text>
    <text help-text="Include http or https" identifier="url" label="URL to your profile or page"/>
  </group>
  <group identifier="custom-link" label="Custom link" maximum-number="4" multiple="true">
    <text help-text="What the user will see" identifier="text" label="Link text"/>
    <asset identifier="page" label="Page to link to" type="page"/>
    <text identifier="url" label="Or enter a URL"/>
  </group>
</system-data-structure>